@model EEIMS.Models.VerifyOTPViewModel

@{
    ViewBag.Title = "VerifyOTP";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>

    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-gradient-primary">

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mx-auto" style="width: 18rem;">
                    <div class="card-body text-center">
                        <h2 class="card-title mb-4">Verify OTP</h2>
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(model => model.OTP, new { @class = "form-label" })
                                @Html.EditorFor(model => model.OTP, new { @class = "form-control", @placeholder = "OTP" })
                                @Html.ValidationMessageFor(model => model.OTP, "", new { @class = "text-danger" })
                            </div>

                            <div class="d-grid gap-2">
                                <input type="submit" value="Verify" class="btn btn-primary" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
