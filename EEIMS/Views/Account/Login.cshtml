@using EEIMS.Models
@using System.Web.UI.WebControls
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>

    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="row justify-content-center">

            <div class="col-xl-12 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row align">
                            <div class="col-lg-6 d-none d-lg-block ">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                                     class="img-fluid" alt="Sample image">
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5 justify-content-center">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <div class="custom-control text-center">
                                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, htmlAttributes: new { role = "form", @class = "user" }))
                                        {
                                            <div class="form-group">
                                                @Html.AntiForgeryToken()
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                <div class="custom-control">
                                                    @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control form-control-user", @placeholder = "Enter email address" })
                                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="custom-control">
                                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-user", @placeholder = "Enter password" })
                                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox small">
                                                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input" })
                                                    @Html.LabelFor(m => m.RememberMe, "Remember me", new { @class = "custom-control-label" })
                                                </div>
                                            </div>
                                            <input type="submit" value="Login" class="btn btn-primary btn-user btn-block" />
                                        }
                                        <hr>
                                    </div>
                                    <div class="text-center">
                                        @Html.ActionLink("Forgot password?", "ForgotPassword", null, new { @class = "text-body small" })
                                    </div>
                                    <div class="text-center">
                                        @Html.ActionLink("Register", "Register", null, new { @class = "link-danger small" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>


    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/js/sb-admin-2.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>

</html>


























            
               
              



