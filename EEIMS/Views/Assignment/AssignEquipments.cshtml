@model EEIMS.Models.CreateAssignmentViewModel

@{
    ViewBag.Title = "CreateNewAssinment";
}

<div class="container-fluid px-4 mb-5">
    <h3 class="mt-4">New Assignment</h3>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("AdminDashboard", "Admin")">Dashboard</a></li>
        <li class="breadcrumb-item active">New Assignment</li>
    </ol>

    <div class="d-flex justify-content-center">
        @using (Html.BeginForm("AssignEquipments", "Assignment", FormMethod.Post, new { @class = "border p-4 rounded text-center", style = "width: 60%;" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <h4 class="fw-medium">Create a new Assignment</h4>
                <hr class="my-4" style="border-top: 3px solid;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="col-12 d-flex justify-content-center">
                <div class="form-group">
                    @Html.LabelFor(model => model.EmployeeId, htmlAttributes: new { @class = "form-label" })
                    <div>
                        @Html.EditorFor(model => model.EmployeeId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EmployeeId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                @Html.LabelFor(model => model.EquipmentIds, htmlAttributes: new { @class = "form-label" })
                <div>
                    @Html.ListBoxFor(model => model.EquipmentIds, (MultiSelectList)ViewBag.EquipmentList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EquipmentIds, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-12 d-flex justify-content-center">
                <div class="form-group mt-3">
                    @Html.LabelFor(model => model.ExpectedReturnDate, htmlAttributes: new { @class = "form-label" })
                    <div>
                        @Html.EditorFor(model => model.ExpectedReturnDate, new { htmlAttributes = new { @class = "form-control", Type = "Date" } })
                        @Html.ValidationMessageFor(model => model.ExpectedReturnDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <div>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
         }
       </div>
</div>
